<header class='header'>
  <div class='logo'>
    <%= link_to image_tag("matching-logo.png", class:"matching-icon"), "/" %>
  </div>
  <div class='nav'>
    <ul class='lists'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, edit_user_registration_path, class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <% if current_user.role_id == 1 %>
          <li><%= link_to 'コーチング登録', new_coach_path, class: "new-coach" %></li>
        <% elsif current_user.role_id == 2 %>
          <li><%= link_to '生徒登録', new_student_path, class: "new-student" %></li>
        <% end %>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>